{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "ionic:serve"
            ],
            "timeout": 120000,
            "console": "integratedTerminal",
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "ionic",
            "args": [
                "serve"
            ],
            "port": 9229
        },
        {
            "name": "Attach in Chrome",
            "type": "chrome",
            "request": "attach",
            "url": "http://localhost:8100/",
            "sourceMaps": true,
            "port": 9222
        },        
        {
            "name": "Launch in Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8100/",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/www"
        }
    ]
}